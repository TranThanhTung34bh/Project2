@model Project2_TaiTungHung.Models.HoaDon

@{
    ViewData["Title"] = "Chỉnh sửa hóa đơn";
}

<h1 class="mb-4">Chỉnh sửa hóa đơn</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title mb-3">Thông tin hóa đơn</h4>
        <hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="MaHd" />

            <div class="form-group mb-3">
                <label asp-for="NgayLap" class="form-label">Ngày lập</label>
                <input asp-for="NgayLap" class="form-control" />
                <span asp-validation-for="NgayLap" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaKh" class="form-label">Khách hàng</label>
                <select asp-for="MaKh" class="form-control" asp-items="ViewBag.MaKh"></select>
                <span asp-validation-for="MaKh" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MaNv" class="form-label">Nhân viên lập</label>
                <select asp-for="MaNv" class="form-control" asp-items="ViewBag.MaNv"></select>
                <span asp-validation-for="MaNv" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>
