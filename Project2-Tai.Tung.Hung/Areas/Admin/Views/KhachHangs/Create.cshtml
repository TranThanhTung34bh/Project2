@model Project2_TaiTungHung.Models.KhachHang

@{
    ViewData["Title"] = "Thêm khách hàng mới";
}

<h1 class="mb-4">Thêm khách hàng mới</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">Thông tin khách hàng</h4>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="MaKh" class="form-label">Mã khách hàng</label>
                        <input asp-for="MaKh" class="form-control" placeholder="Nhập mã khách hàng" />
                        <span asp-validation-for="MaKh" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HoTen" class="form-label">Họ tên</label>
                        <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Sdt" class="form-label">Số điện thoại</label>
                        <input asp-for="Sdt" class="form-control" placeholder="Nhập số điện thoại" />
                        <span asp-validation-for="Sdt" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                        <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Lưu khách hàng
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
