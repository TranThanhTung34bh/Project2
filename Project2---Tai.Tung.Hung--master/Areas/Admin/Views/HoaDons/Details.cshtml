@model Project2_TaiTungHung.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<h1 class="mb-4">Chi tiết hóa đơn</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Thông tin hóa đơn</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.MaHd)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MaHd)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.NgayLap)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.NgayLap)
            </dd>

            <dt class="col-sm-3">
                Khách hàng
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MaKhNavigation.HoTen)
                (@Html.DisplayFor(model => model.MaKhNavigation.MaKh))
            </dd>

            <dt class="col-sm-3">
                Nhân viên lập
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MaNvNavigation.HoTen)
                (@Html.DisplayFor(model => model.MaNvNavigation.MaNv))
            </dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.MaHd" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
