@model Project2_TaiTungHung.Models.KhachHang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<h1 class="mb-4">Chi tiết khách hàng</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">Thông tin khách hàng</h4>

                <dl class="row">
                    <dt class="col-sm-4">Họ tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HoTen)</dd>

                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Sdt)</dd>

                    <dt class="col-sm-4">Địa chỉ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DiaChi)</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model?.MaKh" class="btn btn-primary">
                        <i class="bi bi-pencil-square"></i> Sửa khách hàng
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
