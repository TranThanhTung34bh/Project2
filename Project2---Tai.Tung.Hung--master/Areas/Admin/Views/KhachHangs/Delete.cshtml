@model Project2_TaiTungHung.Models.KhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
}

<h1 class="mb-4">Xóa khách hàng</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h4 class="card-title mb-3">Bạn có chắc muốn xóa khách hàng này?</h4>

                <dl class="row">
                    <dt class="col-sm-4">Họ tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HoTen)</dd>

                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Sdt)</dd>

                    <dt class="col-sm-4">Địa chỉ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DiaChi)</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                </dl>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="MaKh" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Xóa khách hàng
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
